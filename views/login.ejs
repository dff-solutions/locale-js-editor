  <title>DFF Locale Editor</title>

  <!-- Application styles. -->

  <!--(if target release)>
  <link rel="stylesheet" href="release.css">
  <!(endif)-->

  <!--(if target debug)>
  <link rel="stylesheet" href="debug.css">
  <!(endif)-->

  <!--(if target dummy)><!-->
  <link rel="stylesheet" href="/app/styles/index.css">
