</head>

<body>
  <!-- Main container. -->
<header>
  <div class="pull-left">
    <img src="/assets/img/logo.png">    
  </div>
  <div id="loadIndicator" class="pull-right loading" style="display:none;">
    <img src="/assets/img/loading.gif">        
  </div>  
<div class="clearfix">
  </div>  
<hr>
</header>  

  <div role="main" id="stage">

<% if(message){ %>
  <div class="container">
    <div class="row">   
    <div class="alert alert-error">  
      <strong>Error! </strong><%= message %>
    </div>      
    </div>  
  </div>
<% } %>

<div class="container">
  <div class="row">
    <div class="offset4 span4">
      <form action="/login" method="post">
        <div>
        <label>Username:</label>
        <input type="text" name="username"/><br/>
        </div>
        <div>
        <label>Password:</label>
        <input type="password" name="password"/>
        </div>
        <div>
        <input type="submit" value="Submit"/>
        </div>
    </form>

    </div>
  </div>
</div>


  </div>

  <!-- Application source. -->

  <!--(if target release)>
  <script data-main="/app/config" src="source.min.js"></script>
  <!(endif)-->

  <!--(if target debug)>
  <script data-main="/app/config" src="source.js"></script>
  <!(endif)-->

  <!--(if target dummy)><!-->
  <script data-main="/app/config" src="/vendor/js/libs/require.js"></script>
  <!--<!(endif)-->
</body>
</html>
